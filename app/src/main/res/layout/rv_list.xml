<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardku"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rv_layout_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/tv_title_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#C4C4C4"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@+id/img_list"/>

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/tv_title_list"
            android:layout_toRightOf="@id/img_list"
            android:src="@drawable/location"/>

        <TextView
            android:id="@+id/tv_region_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="region"
            android:textColor="#000"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_toRightOf="@id/icon_location"
            android:layout_toEndOf="@id/icon_location"
            android:layout_below="@id/tv_title_list"
            />

        <ImageView
            android:id="@+id/icon_population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_below="@id/icon_location"
            android:layout_toRightOf="@id/img_list"
            android:src="@drawable/population"/>

        <TextView
            android:id="@+id/tv_population_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="population"
            android:textColor="#000"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_toRightOf="@id/icon_population"
            android:layout_toEndOf="@id/icon_population"
            android:layout_below="@id/tv_region_list"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>